<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/bPad"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/buttonZ"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_gray"
            android:text="Z" />

        <Button
            android:id="@+id/buttonR"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/button_gray"
            android:text="R" />

        <Button
            android:id="@+id/buttonL"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/button_gray"
            android:text="L" />

        <Button
            android:id="@+id/buttonS"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_start"
            android:text="S" />

        <TextView
            android:id="@+id/textFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="(feedback)"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aPad"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/analog_ring" >

        <ImageButton
            android:id="@+id/buttonAU"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_apad"
            android:contentDescription="AU"
            android:src="@drawable/ic_arrow_u" />

        <ImageButton
            android:id="@+id/buttonAD"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_apad"
            android:contentDescription="AD"
            android:src="@drawable/ic_arrow_d" />

        <ImageButton
            android:id="@+id/buttonAL"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_apad"
            android:contentDescription="AL"
            android:src="@drawable/ic_arrow_l" />

        <ImageButton
            android:id="@+id/buttonAR"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_apad"
            android:contentDescription="AR"
            android:src="@drawable/ic_arrow_r" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dPad"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" >

        <ImageButton
            android:id="@+id/buttonDU"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_dpad"
            android:contentDescription="DU"
            android:src="@drawable/ic_arrow_u" />

        <ImageButton
            android:id="@+id/buttonDD"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_dpad"
            android:contentDescription="DD"
            android:src="@drawable/ic_arrow_d" />

        <ImageButton
            android:id="@+id/buttonDL"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_dpad"
            android:contentDescription="DL"
            android:src="@drawable/ic_arrow_l" />

        <ImageButton
            android:id="@+id/buttonDR"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_dpad"
            android:contentDescription="DR"
            android:src="@drawable/ic_arrow_r" />

        <Button
            android:id="@+id/buttonDC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button_dpad"
            android:enabled="false" />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cPad"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <ImageButton
            android:id="@+id/buttonCU"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/buttonCR"
            android:layout_toLeftOf="@+id/buttonCR"
            android:background="@drawable/button_cpad"
            android:contentDescription="CU"
            android:src="@drawable/ic_arrow_u" />

        <ImageButton
            android:id="@+id/buttonCD"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/buttonCR"
            android:layout_toLeftOf="@+id/buttonCR"
            android:background="@drawable/button_cpad"
            android:contentDescription="CD"
            android:src="@drawable/ic_arrow_d" />

        <ImageButton
            android:id="@+id/buttonCL"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/buttonCU"
            android:layout_toLeftOf="@+id/buttonCU"
            android:background="@drawable/button_cpad"
            android:contentDescription="CL"
            android:src="@drawable/ic_arrow_l" />

        <ImageButton
            android:id="@+id/buttonCR"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_cpad"
            android:contentDescription="CR"
            android:src="@drawable/ic_arrow_r" />
        <Button
            android:id="@+id/buttonCC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/buttonCR"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:text="C"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/primary_text_dark_nodisable" />
        
        <Button
            android:id="@+id/buttonB"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/buttonCL"
            android:layout_toLeftOf="@+id/buttonCL"
            android:background="@drawable/button_b"
            android:text="B" />

        <Button
            android:id="@+id/buttonA"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/buttonCD"
            android:layout_toLeftOf="@+id/buttonCD"
            android:background="@drawable/button_a"
            android:text="A" />
    </RelativeLayout>

</RelativeLayout>