<?xml version="1.0" encoding="utf-8"?>
<!--
    ***********************************************************************************
    IMPORTANT:
    
    Except for the root view, all views in this file MUST set these flags to FALSE:
    
        android:focusable="false"
        android:focusableInTouchMode="false"
    
    This allows focus to stay in the root view at all times.  This is critical because
    the root view is the only view that listens to input from gamepads, keyboards, etc.
    ***********************************************************************************
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inputMapPreference"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp" >

    <RelativeLayout
        android:id="@+id/bPad"
        android:layout_width="@dimen/inputMapPreferenceButtonSizeX5"
        android:layout_height="@dimen/inputMapPreferenceButtonSizeX3"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:focusableInTouchMode="false" >

        <Button
            android:id="@+id/buttonZ"
            android:layout_width="@dimen/inputMapPreferenceButtonSize"
            android:layout_height="@dimen/inputMapPreferenceButtonSize"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_gray"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Z"
            android:textColor="@android:color/primary_text_dark_nodisable" />

        <Button
            android:id="@+id/buttonR"
            android:layout_width="@dimen/inputMapPreferenceButtonSize"
            android:layout_height="@dimen/inputMapPreferenceButtonSize"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/button_gray"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="R"
            android:textColor="@android:color/primary_text_dark_nodisable" />

        <Button
            android:id="@+id/buttonL"
            android:layout_width="@dimen/inputMapPreferenceButtonSize"
            android:layout_height="@dimen/inputMapPreferenceButtonSize"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/button_gray"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="L"
            android:textColor="@android:color/primary_text_dark_nodisable" />

        <Button
            android:id="@+id/buttonS"
            android:layout_width="@dimen/inputMapPreferenceButtonSize"
            android:layout_height="@dimen/inputMapPreferenceButtonSize"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_start"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="S"
            android:textColor="@android:color/primary_text_dark_nodisable" />

        <TextView
            android:id="@+id/textFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="feedback"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/primary_text_dark_nodisable" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dPad"
        android:layout_width="@dimen/inputMapPreferenceButtonSizeX3"
        android:layout_height="@dimen/inputMapPreferenceButtonSizeX3"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:focusableInTouchMode="false" >

        <Button
            android:id="@+id/buttonDU"
            android:layout_width="@dimen/inputMapPreferenceButtonSize"
            android:layout_height="@dimen/inputMapPreferenceButtonSize"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_dpad"
            android:drawableTop="@drawable/ic_arrow_u"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <Button
            android:id="@+id/buttonDD"
            android:layout_width="@dimen/inputMapPreferenceButtonSize"
            android:layout_height="@dimen/inputMapPreferenceButtonSize"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_dpad"
            android:drawableBottom="@drawable/ic_arrow_d"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <Button
            android:id="@+id/buttonDL"
            android:layout_width="@dimen/inputMapPreferenceButtonSize"
            android:layout_height="@dimen/inputMapPreferenceButtonSize"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_dpad"
            android:drawableLeft="@drawable/ic_arrow_l"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <Button
            android:id="@+id/buttonDR"
            android:layout_width="@dimen/inputMapPreferenceButtonSize"
            android:layout_height="@dimen/inputMapPreferenceButtonSize"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_dpad"
            android:drawableRight="@drawable/ic_arrow_r"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <Button
            android:id="@+id/buttonDC"
            android:layout_width="@dimen/inputMapPreferenceButtonSize"
            android:layout_height="@dimen/inputMapPreferenceButtonSize"
            android:layout_centerInParent="true"
            android:background="@drawable/button_dpad"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cPad"
        android:layout_width="@dimen/inputMapPreferenceButtonSizeX3"
        android:layout_height="@dimen/inputMapPreferenceButtonSizeX5"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:focusableInTouchMode="false" >

        <RelativeLayout
            android:id="@+id/cPad2"
            android:layout_width="@dimen/inputMapPreferenceButtonSizeX3"
            android:layout_height="@dimen/inputMapPreferenceButtonSizeX3"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:focusableInTouchMode="false" >

            <Button
                android:id="@+id/buttonCU"
                android:layout_width="@dimen/inputMapPreferenceButtonSize"
                android:layout_height="@dimen/inputMapPreferenceButtonSize"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_cpad"
                android:drawableTop="@drawable/ic_arrow_u"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <Button
                android:id="@+id/buttonCD"
                android:layout_width="@dimen/inputMapPreferenceButtonSize"
                android:layout_height="@dimen/inputMapPreferenceButtonSize"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_cpad"
                android:drawableBottom="@drawable/ic_arrow_d"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <Button
                android:id="@+id/buttonCL"
                android:layout_width="@dimen/inputMapPreferenceButtonSize"
                android:layout_height="@dimen/inputMapPreferenceButtonSize"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_cpad"
                android:drawableLeft="@drawable/ic_arrow_l"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <Button
                android:id="@+id/buttonCR"
                android:layout_width="@dimen/inputMapPreferenceButtonSize"
                android:layout_height="@dimen/inputMapPreferenceButtonSize"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_cpad"
                android:drawableRight="@drawable/ic_arrow_r"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <Button
                android:id="@+id/buttonCC"
                android:layout_width="@dimen/inputMapPreferenceButtonSize"
                android:layout_height="@dimen/inputMapPreferenceButtonSize"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="C"
                android:textColor="@android:color/primary_text_dark_nodisable" />
        </RelativeLayout>

        <Button
            android:id="@+id/buttonB"
            android:layout_width="@dimen/inputMapPreferenceButtonSize"
            android:layout_height="@dimen/inputMapPreferenceButtonSize"
            android:layout_alignLeft="@+id/cPad2"
            android:layout_below="@+id/cPad2"
            android:background="@drawable/button_b"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="B"
            android:textColor="@android:color/primary_text_dark_nodisable" />

        <Button
            android:id="@+id/buttonA"
            android:layout_width="@dimen/inputMapPreferenceButtonSize"
            android:layout_height="@dimen/inputMapPreferenceButtonSize"
            android:layout_below="@+id/buttonB"
            android:layout_toRightOf="@+id/buttonB"
            android:background="@drawable/button_a"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="A"
            android:textColor="@android:color/primary_text_dark_nodisable" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aPad"
        android:layout_width="@dimen/inputMapPreferenceButtonSizeX3"
        android:layout_height="@dimen/inputMapPreferenceButtonSizeX3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/analog_ring"
        android:focusable="false"
        android:focusableInTouchMode="false" >

        <Button
            android:id="@+id/buttonAC"
            android:layout_width="@dimen/inputMapPreferenceButtonSizeX15"
            android:layout_height="@dimen/inputMapPreferenceButtonSizeX15"
            android:layout_centerInParent="true"
            android:background="@drawable/analog_ring"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <Button
            android:id="@+id/buttonAU"
            android:layout_width="@dimen/inputMapPreferenceButtonSize"
            android:layout_height="@dimen/inputMapPreferenceButtonSizeX15"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_apad"
            android:drawableBottom="@drawable/ic_arrow_u"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <Button
            android:id="@+id/buttonAD"
            android:layout_width="@dimen/inputMapPreferenceButtonSize"
            android:layout_height="@dimen/inputMapPreferenceButtonSizeX15"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_apad"
            android:drawableTop="@drawable/ic_arrow_d"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <Button
            android:id="@+id/buttonAL"
            android:layout_width="@dimen/inputMapPreferenceButtonSizeX15"
            android:layout_height="@dimen/inputMapPreferenceButtonSize"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_apad"
            android:drawableRight="@drawable/ic_arrow_l"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <Button
            android:id="@+id/buttonAR"
            android:layout_width="@dimen/inputMapPreferenceButtonSizeX15"
            android:layout_height="@dimen/inputMapPreferenceButtonSize"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_apad"
            android:drawableLeft="@drawable/ic_arrow_r"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </RelativeLayout>

    <Button
        android:id="@+id/buttonRumble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_gray"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:minLines="2"
        android:minWidth="@dimen/inputMapPreferenceButtonSize"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/inputMapPreference_rumble"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/primary_text_dark_nodisable" />

    <Button
        android:id="@+id/buttonMempak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/button_gray"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:minLines="2"
        android:minWidth="@dimen/inputMapPreferenceButtonSize"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/inputMapPreference_mempak"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/primary_text_dark_nodisable" />

</RelativeLayout>